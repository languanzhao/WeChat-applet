.container {
  width: 100%;
  height: 100vh;
  background: #f7f7f7;
  overflow: auto;
}

.banner {
  height: 375rpx;
  margin: 20rpx;
  box-sizing: border-box;
  background-color: #eee;
  line-height: 0;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 2px 2px 2px 3px #999;
}

.banner image {
  width: 100%;
  height: 100%;
}

.section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 2px 2px 2px 3px #999;
}
.section .title{
	width:100%;
	text-align: center;
	font-size:32rpx;
  color:#000;
  font-style: italic;
  font-weight: bold;
  letter-spacing: 6rpx;
}
.section text{
	font-size: 28rpx;
	line-height: 2em;
	color: #666;
}
.section .support{
	display: block;
	font-size:24rpx;
}
.section .wx view{
		display: flex;
		width: 100%;
		flex-wrap: wrap;
}
.section .wx text {
	display: block;
	width: 50%;
	text-align: left;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.wx{
  margin-top: 10rpx;
}
.loading{
	width: 200rpx;
	height: 200rpx;
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
	text-align: center;
}
.loadingImg{
	width:54rpx;
	height:54rpx;
	display: block;
	margin:5rpx auto;
}
.loading text{
	font-size: 30rpx;
}