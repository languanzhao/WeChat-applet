.bgImg{
	position: relative;
	width:700rpx;
	height: 360rpx;
	border-radius: 30rpx;
	overflow: hidden;
	margin:20rpx auto;
}
.bgImg image{
	width:700rpx;
	height: 360rpx;
}
.bgImg view{
	position: absolute;
	display: inline-block;
	text-align: left;
	height: 60rpx;
	line-height: 60rpx;
	width: inherit;
	left: 0;
	bottom: 0;
	color: #fff;
	background: rgba(0,0,0,0.5);
	padding-left:20rpx;
	font-size:28rpx;
}
.loading{
	width: 200rpx;
	height: 200rpx;
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	margin: auto;
	text-align: center;
}
.loadingImg{
	width:54rpx;
	height:54rpx;
	display: block;
	margin:5rpx auto;
}
.loading text{
	font-size: 30rpx;
}